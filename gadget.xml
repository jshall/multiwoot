<?xml version="1.0" encoding="utf-8"?>
<gadget>
	<name>multiWoot</name>
	<namespace>microsoft.windows</namespace>
	<version>2.2.3.0</version>
	<author name="Josh Hall"><info text="josh.s.hall@gmail.com"/></author>
	<description>A gadget that cycles trough the multiple sites providing you with name, price, description, image and even woot meter for the current item.</description>
	<icons><icon height="130" width="145" src="gadget.png"/></icons>
	<hosts>
		<host name="sidebar">
			<base type="HTML" apiVersion="1.0.0" src="index.html"/>
			<permissions>Full</permissions>
			<platform minPlatformVersion="0.3"/>
		</host>
	</hosts>
</gadget>
