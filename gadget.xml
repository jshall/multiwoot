<?xml version="1.0" encoding="utf-8"?>
<gadget>
	<name>multiWoot_dev</name>
	<namespace>microsoft.windows</namespace>
	<version>0</version>
	<author name="Josh Hall">
		<info text="josh.s.hall@gmail.com"/>
	</author>
	<description>A gadget that cycles trough the 3 woot sites and provides you with name, price, description, image and even woot meter for the current item.</description>
	<icons>
		<icon height="48" width="48" src="wootlogo.png"/>
	</icons>
	<hosts>
		<host name="sidebar">
			<base type="HTML" apiVersion="1.0.0" src="WootGadget.html"/>
			<permissions>Full</permissions>
			<platform minPlatformVersion="0.3"/>
		</host>
	</hosts>
</gadget>
